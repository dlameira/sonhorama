
<div class="index-projects container-fluid" data-controller="project-thumbnail"
  data-project-thumbnail-logged-in="<%= user_signed_in? %>" data-project-thumbnail-target="container">

  <% @projects.each do |project| %>

    <% if project.present? %>

      <div data-project-id="<%= project.id %>" class="project-thumbs">

       <div class="thumb-title-container">
          <p class="thumb-title"><%= project.title %> &nbsp &nbsp // &nbsp &nbsp <%= project.client %></p>
      </div>

        <%= link_to project_path(project), class: 'thumbs-projetinhos', id: "project-#{project.id}" do  %>
          <%= cl_image_tag project.thumbnail.key, class:'index-thumbs' %>
        <% end %>

      </div>

    <% end %>

  <% end %>

</div>

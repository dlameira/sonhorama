<div class="index-projects container-fluid">

  <% @projects.each do |project| %>

    <% if project.present? %>

      <%= link_to project_path(project), class:'thumbs-projetinhos' do  %>
        <span class="thumb-title"><%= project.title %></span>
        <%= cl_image_tag project.thumbnail.key, class:'index-thumbs' %>
      <% end %>

    <% end %>

  <%end%>


</div>
